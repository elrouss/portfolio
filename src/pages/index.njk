{% import "src/components/templates/home/home.njk" as Home %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="preload" as="font" type="font/woff2" href="@/assets/fonts/Mulish-400.woff2" crossorigin/>
    <link rel="preload" as="font" type="font/woff2" href="@/assets/fonts/Mulish-500.woff2" crossorigin/>
    <link rel="preload" as="font" type="font/woff2" href="@/assets/fonts/Oswald-300.woff2" crossorigin/>
    <link rel="preload" as="font" type="font/woff2" href="@/assets/fonts/Oswald-400.woff2" crossorigin/>
    <title>{{ meta.title }}</title>
    <link rel="icon" type="image/x-icon" href="{{ meta.icons.faviconIco }}"/>
    <link rel="stylesheet" href="@/assets/styles/_critical.scss?inline"/>
    <meta property="og:title" content="{{ meta.og.title }}"/>
    <meta property="og:description" content="{{ meta.og.description }}"/>
    <meta property="og:type" content="{{ meta.og.type }}"/>
    <meta property="og:image" content="{{ meta.og.image }}"/>
    <meta property="og:image:type" content="{{ meta.og.imageType }}"/>
    <meta property="og:image:width" content="{{ meta.og.imageWidth }}"/>
    <meta property="og:image:height" content="{{ meta.og.imageHeight }}"/>
    <meta property="og:image:alt" content="{{ meta.og.imageAlt }}"/>
    <meta property="og:url" content="{{ meta.url }}"/>
    <meta property="twitter:card" content="{{ meta.twitter.card }}"/>
    <meta property="twitter:title" content="{{ meta.twitter.title }}"/>
    <meta property="twitter:description" content="{{ meta.twitter.description }}"/>
    <meta property="twitter:image" content="{{ meta.twitter.image }}"/>
    <meta property="twitter:image:type" content="{{ meta.twitter.imageType }}"/>
    <meta property="twitter:image:width" content="{{ meta.twitter.imageWidth }}"/>
    <meta property="twitter:image:height" content="{{ meta.twitter.imageHeight }}"/>
    <meta property="twitter:image:alt" content="{{ meta.twitter.imageAlt }}"/>
    <meta name="description" content="{{ meta.description }}"/>
    <link rel="apple-touch-icon" type="image/png" sizes="180x180" href="{{ meta.icons.appleTouch }}"/>
    <link rel="icon" type="image/png" sizes="32x32" href="{{ meta.icons.favicon32 }}"/>
    <link rel="icon" type="image/png" sizes="16x16" href="{{ meta.icons.favicon16 }}"/>
    <meta name="theme-color" content="{{ meta.themeColor }}"/>
    <link rel="preload" as="style" href="@/assets/styles/_index.scss" onload="this.rel='stylesheet'"/>
    <script src="../index.ts" defer></script>
  </head>
  <body>
    {{ Home.home(header, hero, about, portfolio, price, faq, contacts, footer, drawer, contactFormDialog) }}
  </body>
</html>